              <!-- Run in a forked JVM via `mvn compile exec:exec@temper_syntax.tempermd_pygments.TempermdPygmentsMain` -->
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- Used by exec:java -->
              <mainClass>temper_syntax.tempermd_pygments.TempermdPygmentsMain</mainClass>
              <!-- Used by exec:exec -->
              <executable>java</executable>
