                <argument>${project.build.outputDirectory}</argument>
                <argument>temper_syntax.temper_pygments__preface.TemperPygmentsPrefaceMain</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>temper_syntax.tempermd_pygments.TempermdPygmentsMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@temper_syntax.tempermd_pygments.TempermdPygmentsMain` -->
