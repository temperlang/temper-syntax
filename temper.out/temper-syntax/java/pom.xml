                <argument>-classpath</argument>
                <argument>${project.build.outputDirectory}</argument>
                <argument>temper_syntax.tempermd_pygments.TempermdPygmentsMain</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>temper_syntax.tempermd_pygments__preface.TempermdPygmentsPrefaceMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@temper_syntax.tempermd_pygments__preface.TempermdPygmentsPrefaceMain` -->
